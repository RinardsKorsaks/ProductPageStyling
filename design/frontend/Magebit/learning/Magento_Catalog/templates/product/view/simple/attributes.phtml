$_helper = $this->helper(Magento\Catalog\Helper\Output::class);
$_product = $block->getProduct();
$attributes = $block->getData("view_model");
?>
<?php if ($_additional = $block->getAdditionalData()) :?>
    <div class="additional-attributes-wrapper table-wrapper">
        <ul class="additional-attributes">
        <?php foreach ($attributes->getAttributes($_additional) as $attribute) :?>

            <li>
                <strong class="label <?= $block->escapeHtmlAttr($attribute['label']) ?>">
                <?= $block->escapeHtml($attribute['label']) ?>: </strong>
                <?= /* @noEscape
                     * */ $_helper->productAttribute($_product, $attribute['value'], $attribute['code']) ?></li>
        <?php endforeach; ?>
        </ul>
        <?php if($_product->getShortDescription()): ?>
            <span class="short-description"><?= $_product->getShortDescription();?></span>
        <?php endif; ?>
    </div>
<?php endif;?>

